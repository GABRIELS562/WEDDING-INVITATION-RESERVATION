{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.ts"],
  "exclude": [
    "node_modules",
    "src/app/**/*",
    "api/**/*",
    "tests/**/*",
    "src/components/admin/**/*",
    "src/components/examples/**/*",
    "src/utils/whatsapp*",
    "scripts/**/*",
    "dist/**/*"
  ]
}