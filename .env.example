# Google Sheets API Configuration
# Get your API key from Google Cloud Console: https://console.cloud.google.com/
# Make sure to restrict the API key to your domain for security
REACT_APP_GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here

# Your Google Spreadsheet ID (found in the URL)
# https://docs.google.com/spreadsheets/d/[SPREADSHEET_ID]/edit
REACT_APP_GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# EmailJS Configuration (for email confirmations)
# Sign up at https://www.emailjs.com/ and follow EMAILJS_SETUP.md
# Service ID from EmailJS dashboard (e.g., service_abc123)
REACT_APP_EMAILJS_SERVICE_ID=service_abc123

# Template ID from EmailJS dashboard (e.g., template_xyz789)
REACT_APP_EMAILJS_TEMPLATE_ID=template_xyz789

# Public Key from EmailJS account settings (e.g., user_abcdef123456)
REACT_APP_EMAILJS_PUBLIC_KEY=user_abcdef123456

# Application Settings
REACT_APP_WEDDING_HASHTAG=#YourWeddingHashtag
REACT_APP_WEBSITE_URL=https://yourweddingwebsite.com

# Security Settings (Optional)
REACT_APP_CORS_ORIGINS=https://yourweddingwebsite.com,https://www.yourweddingwebsite.com
REACT_APP_ALLOWED_DOMAINS=yourweddingwebsite.com

# Development Settings
VITE_DEV_MODE=false
VITE_SHOW_DEBUG_INFO=false

# Google Sheets Configuration
# The sheet name and range for RSVP data
REACT_APP_GOOGLE_SHEETS_RANGE=RSVP_Individual!A1:L

# Legacy environment variables (for backward compatibility)
VITE_GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here
VITE_GOOGLE_SHEET_ID=your_google_sheet_id_here
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key