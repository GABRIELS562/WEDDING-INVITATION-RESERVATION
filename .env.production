# Production Environment Variables
NODE_ENV=production

# App Configuration
VITE_APP_NAME="Sarah & Michael's Wedding"
VITE_APP_URL=https://sarah-michael-wedding.com
VITE_API_URL=https://sarah-michael-wedding.com/api

# Google Sheets API (Production)
VITE_GOOGLE_SHEETS_API_KEY=your_production_api_key_here
VITE_GOOGLE_SHEETS_SPREADSHEET_ID=your_production_spreadsheet_id_here
GOOGLE_SHEETS_PRIVATE_KEY=your_production_service_account_private_key_here
GOOGLE_SHEETS_CLIENT_EMAIL=your_production_service_account_email_here

# EmailJS Configuration (Production)
VITE_EMAILJS_SERVICE_ID=your_production_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=your_production_emailjs_template_id
VITE_EMAILJS_PUBLIC_KEY=your_production_emailjs_public_key
EMAILJS_PRIVATE_KEY=your_production_emailjs_private_key

# Security Settings
VITE_GUEST_TOKEN_SECRET=your_super_secure_token_secret_here
VITE_RATE_LIMIT_WINDOW=900000
VITE_RATE_LIMIT_MAX_REQUESTS=10

# Analytics & Monitoring
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_HOTJAR_ID=your_hotjar_id_here

# Performance Monitoring
VITE_WEB_VITALS_ENABLED=true
VITE_ERROR_REPORTING_ENABLED=true

# Wedding Configuration
VITE_WEDDING_DATE=2024-06-15
VITE_RSVP_DEADLINE=2024-05-15
VITE_VENUE_TIMEZONE=America/New_York

# Feature Flags
VITE_ENABLE_GUEST_AUTH=true
VITE_ENABLE_EMAIL_CONFIRMATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# Content Security Policy
VITE_CSP_REPORT_URI=/api/csp-report